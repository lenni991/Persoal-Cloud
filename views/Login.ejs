<%- include ("includes/header", { "title": "Login" }) %>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<div class="container" style="margin-top: 50px;">
    <%- include ("includes/ResponseAlert", { "request": request }) %>

    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-12">
            <form action="<%= request.mainURL %>/Login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" placeholder="Enter email" name="email" class="form-control" id="email" required />
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" placeholder="Enter password" name="password" class="form-control" id="password" required />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>


<%- include ("includes/footer") %>

<style>
    /* CSS for small screens */
    @media (max-width: 576px) {
        .container {
            margin-top: 30px;
        }

        .col-md-6 {
            width: 100%;
        }
    }
</style>


