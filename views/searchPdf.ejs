<%- include ("includes/header", { "title" : "PDF Search" }) %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
    <!-- <title>PDF Search App</title> -->
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        header {
            background-color: #007bff;
            color: #fff;
            padding: 20px;
            border-radius: 16px;
        }

        h1 {
            margin: 0;
        }

        form {
            margin-top: 20px;
            display: flex;
            flex-wrap: wrap;
        }

        label {
            display: block;
            margin-right: 10px;
        }

        input[type="text"] {
            flex: 1;
            padding: 10px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-right: 10px;
        }

        input[type="submit"] {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>

<body>
 

    <div class="container" style="margin-top: 50px;">
        <%- include ("includes/ResponseAlert", { "request" : request }) %>
        <header class="border-5">
            <h1>PDF Search</h1>
        </header>
            <div class="row justify-content-center">
                <div class="col-md-6">
                        <form action="/searchPdfs" method="POST">
                            <div class="form-group">
                                <label for="query">Search</label>
                                <input type="text" placeholder="Enter your search query" name="query" id="query" />
                                <input type="submit" value="Search">
                            </div>

                        </form>
                </div>
            </div>
    </div>
</body>

</html>
 
    
    <%- include ("includes/footer") %>
    
    <style>
        /* CSS for small screens */
        @media (max-width: 576px) {
            .container {
                margin-top: 30px;
            }
    
            .col-md-6 {
                width: 100%;
            }
        }
    </style>
    